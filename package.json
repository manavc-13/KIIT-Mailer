{
  "name": "iqac-mailer-web",
  "version": "1.0.0",
  "description": "Web-based IQAC Mailer",
  "main": "local_server.js",
  "bin": "local_server.js",
  "scripts": {
    "start": "node local_server.js",
    "build": "pkg . --targets node18-win-x64 --output IQACMailer.exe"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      ".env"
    ],
    "scripts": [
      "api/**/*.js",
      "lib/**/*.js"
    ]
  },
  "dependencies": {
    "busboy": "^1.6.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "portfinder": "^1.0.38",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}