{
    "functions": {
        "api/send-mail.js": {
            "maxDuration": 60,
            "memory": 1024
        }
    },
    "rewrites": [
        {
            "source": "/api/send-mail",
            "destination": "/api/send-mail.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        }
    ]
}